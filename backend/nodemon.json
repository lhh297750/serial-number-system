{
  "watch": ["server.js", "routes/", "controllers/", "models/"],
  "ext": "js,json",
  "ignore": ["node_modules", "test/", "logs/", "*.test.js"],
  "exec": "node server.js",
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  },
  "execMap": {
    "js": "node --inspect"
  },
  "verbose": true,
  "stdin": true,
  "stdout": true,
  "stderr": true
}
